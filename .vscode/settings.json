{
  "editor.wordWrap": "on",
  "files.autoSave": "afterDelay",
  "markdown.preview.breaks": true,
  "markdown.preview.doubleClickToSwitchToEditor": true,
  "markdown.extension.toc.updateOnSave": true,
  "cSpell.language": "en-US",
  "markdownlint.config": {
    "MD001": false,   // Heading levels can increment however you want
    "MD003": false,   // Heading style (ATX vs Setext) — Pandoc handles this
    "MD013": false,   // Line length — APA paragraphs should not be wrapped
    "MD024": false,   // Multiple headings with the same content — APA repeats titles
    "MD025": false,   // Multiple H1 headings — APA Level 1 headings use H1
    "MD026": false,   // Trailing punctuation in headings — APA allows colons
    "MD033": false,   // Inline HTML — Pandoc sometimes needs it
    "MD034": false,   // Bare URLs — APA references often include them
    "MD036": false,   // Emphasis used instead of a heading — not relevant for APA
    "MD041": false    // First line must be a top-level heading — YAML comes first
  }
}
